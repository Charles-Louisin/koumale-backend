{
  "compilerOptions": {
    "target": "ES2020",                  // plus moderne que es2018
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,             // nécessaire pour import jwt, bcrypt, cors
    "skipLibCheck": true,                // ignore les types manquants dans node_modules
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"           // aide à résoudre les modules JS/TS
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
